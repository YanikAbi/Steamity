
@using Steamity.Models.ViewModels.GameViewModels.WishlistViewModels;
@model WishlistGamesViewModel

<h1 class="game-page-title text-center text-primary mt-4">Wishlist</h1>
<table class="table table-bordered table-striped table-allgames" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>
                Game Name
            </th>
            <th>
                Game Added Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model.WishlistGames)
        {
            <tr class="table-dark">
                <td width="50%">
                    <a asp-action="GetById" asp-controller="Games" asp-route-id="@game.Id">
                        @game.Title
                    </a>
                </td>
                <td width="50%">
                    @game.DateAdded
                </td>
            </tr>
        }
    </tbody>
</table>