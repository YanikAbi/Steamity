@using Steamity.Models.InputModels;
@model EditGameInputModel

﻿<h1>Are you sure you want to delete this entry?</h1>

<form method="post" asp-action="DeletePOST">
    @*<input asp-for="Id" hidden />*@
    <div class="border p-3 mt-4 px-4">
        <input asp-for="Id" hidden />
        <div class="mb-3" style="color: #ffffff">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ReleaseDate"></label>
            <input asp-for="ReleaseDate" disabled class="form-control" />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>

    </div>
</form>

<a asp-controller="Games" asp-action="AllGames" class="btn btn-secondary" style="width: 180px; margin-top: 15px;">
    Back to games list
</a>